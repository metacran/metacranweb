<!---- -*- mode: html -*-  --->

<% include header %>
<% include nav %>

<div class="container wide-container maint-list">
  <h1 class="page-header">Package maintainers</h1>

  <div class="row starting-letters">
    <div class="col-md-12">
      &middot
      <% for (var i = 65; i <= 90; i++) { %>
	 <% var c = String.fromCharCode(i); %>
	 <a href="/maint?startkey=<%= c %>"><%= c %></a> &middot;
	 <% } %>
    </div>
  </div>


  <div class="maint-list-inner">
  <% var j=1; for (ptr in people) { %>
    <div class="col-md-6 maintlist-box">
      <h3>
	<span class="maint-span">
	  <span class="glyphicon glyphicon-user maintlist-icon" aria-hidden="true"></span>
	  <a href="/maint/<%= people[ptr].email %>">
	    <strong>
	      <%= people[ptr].name %>
	    </strong>
	</a></span>
      </h3>
      <p><%- packages[people[ptr].email].map(pkg_link).join(', '); %></p>
    </div>
    <% if (! (+j % 2)) { %><div class="clearfix"></div><% } %>
  <% j++; } %>
  </div>
</div>

<div class="container wide-container next-button"
     <div class="row">
       <div class="col-sm-12">
	 <a class="btn btn-default"
	    href="?startkey=<%= people[ptr].name %>"
	    role="button">Next page</a>
       </div>
     </div>
</div>


<% include links %>
<% include footer %>
